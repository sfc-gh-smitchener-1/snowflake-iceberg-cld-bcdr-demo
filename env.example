# =============================================================================
# Iceberg CLD BCDR Demo - Environment Configuration
# =============================================================================
# Copy this file to .env and update with your values
# cp env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Snowflake Organization (for replication)
# Find with: SELECT CURRENT_ORGANIZATION_NAME();
# -----------------------------------------------------------------------------
SNOWFLAKE_ORG_NAME=<YOUR_ORG_NAME>                    # e.g., MYORGNAME

# -----------------------------------------------------------------------------
# Snowflake Primary Account
# Find with: SELECT CURRENT_ACCOUNT_NAME();
# -----------------------------------------------------------------------------
SNOWFLAKE_PRIMARY_ACCOUNT=<YOUR_PRIMARY_ACCOUNT>     # Account NAME, not locator
SNOWFLAKE_PRIMARY_USER=<YOUR_USERNAME>
SNOWFLAKE_PRIMARY_ROLE=ACCOUNTADMIN

# -----------------------------------------------------------------------------
# Snowflake Secondary Account (for BCDR)
# Must be in the same organization as primary
# -----------------------------------------------------------------------------
SNOWFLAKE_SECONDARY_ACCOUNT=<YOUR_SECONDARY_ACCOUNT> # Account NAME, not locator
SNOWFLAKE_SECONDARY_USER=<YOUR_USERNAME>
SNOWFLAKE_SECONDARY_ROLE=ACCOUNTADMIN

# -----------------------------------------------------------------------------
# AWS Configuration
# -----------------------------------------------------------------------------
AWS_ACCOUNT_ID=<YOUR_AWS_ACCOUNT_ID>                 # e.g., 123456789012
AWS_REGION=<YOUR_AWS_REGION>                         # e.g., us-west-2
AWS_S3_BUCKET=<YOUR_S3_BUCKET>                       # e.g., my-iceberg-bucket
AWS_IAM_ROLE_NAME=<YOUR_IAM_ROLE_NAME>               # e.g., SnowflakeIcebergRole
AWS_IAM_ROLE_ARN=arn:aws:iam::${AWS_ACCOUNT_ID}:role/${AWS_IAM_ROLE_NAME}

# -----------------------------------------------------------------------------
# AWS Glue Configuration
# -----------------------------------------------------------------------------
AWS_GLUE_DATABASE=iceberg_advertising_db
AWS_GLUE_CATALOG_URI=https://glue.${AWS_REGION}.amazonaws.com/iceberg

# -----------------------------------------------------------------------------
# Derived Paths (typically don't need to change)
# -----------------------------------------------------------------------------
AWS_S3_ICEBERG_PATH=s3://${AWS_S3_BUCKET}/iceberg/warehouse/

# -----------------------------------------------------------------------------
# Demo Database Names (typically don't need to change)
# -----------------------------------------------------------------------------
ICEBERG_DEMO_WAREHOUSE=ICEBERG_DEMO_WH
ICEBERG_DEMO_EXT_DB=ICEBERG_DEMO_EXT
ICEBERG_DEMO_CLD_DB=ICEBERG_DEMO_CLD
ICEBERG_PROD_DB=ICEBERG_PROD
TASK_WAREHOUSE=TASK_WH

# -----------------------------------------------------------------------------
# Failover Group Names (typically don't need to change)
# -----------------------------------------------------------------------------
FAILOVER_GROUP_ACCOUNT=ICEBERG_BCDR_ACCOUNT_FG
FAILOVER_GROUP_VOLUME=ICEBERG_BCDR_VOLUME_FG
FAILOVER_GROUP_DB=ICEBERG_BCDR_DB_FG