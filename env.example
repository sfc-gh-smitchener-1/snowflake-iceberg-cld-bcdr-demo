# =============================================================================
# Iceberg CLD BCDR Demo - Environment Configuration
# =============================================================================
# Copy this file to .env and update with your values
# cp env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Snowflake Primary Account
# -----------------------------------------------------------------------------
SNOWFLAKE_PRIMARY_ACCOUNT=<your-primary-account>       # e.g., abc12345
SNOWFLAKE_PRIMARY_ACCOUNT_URL=https://<account>.snowflakecomputing.com/
SNOWFLAKE_PRIMARY_USER=<your-username>
SNOWFLAKE_PRIMARY_ROLE=ACCOUNTADMIN

# -----------------------------------------------------------------------------
# Snowflake Secondary Account (for BCDR)
# -----------------------------------------------------------------------------
SNOWFLAKE_SECONDARY_ACCOUNT=<your-secondary-account>   # e.g., xyz67890
SNOWFLAKE_SECONDARY_ACCOUNT_URL=https://<account>.<region>.snowflakecomputing.com/
SNOWFLAKE_SECONDARY_USER=<your-username>
SNOWFLAKE_SECONDARY_ROLE=ACCOUNTADMIN

# -----------------------------------------------------------------------------
# Snowflake Organization (for replication)
# -----------------------------------------------------------------------------
SNOWFLAKE_ORG_NAME=<your-org-name>                     # e.g., MYORGNAME

# -----------------------------------------------------------------------------
# AWS Configuration
# -----------------------------------------------------------------------------
AWS_REGION=<your-region>                               # e.g., us-west-2
AWS_ACCOUNT_ID=<your-aws-account-id>                   # e.g., 123456789012
AWS_S3_BUCKET=<your-bucket>                            # e.g., my-iceberg-bucket
AWS_GLUE_DATABASE=iceberg_advertising_db
AWS_IAM_ROLE_NAME=<your-iam-role-name>                 # e.g., SnowflakeIcebergRole
AWS_IAM_ROLE_ARN=arn:aws:iam::<account-id>:role/<role-name>

# -----------------------------------------------------------------------------
# Derived Paths (typically don't need to change)
# -----------------------------------------------------------------------------
AWS_S3_ICEBERG_PATH=s3://${AWS_S3_BUCKET}/iceberg/warehouse/

# -----------------------------------------------------------------------------
# Demo Configuration
# -----------------------------------------------------------------------------
ICEBERG_DEMO_WAREHOUSE=ICEBERG_DEMO_WH
ICEBERG_DEMO_EXT_DB=ICEBERG_DEMO_EXT
ICEBERG_DEMO_CLD_DB=ICEBERG_DEMO_CLD
